<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ut01.ex03.Ut01Ex03Activity">


    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Texto1  " />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Texto2  "
        android:layout_toEndOf="@id/text1"/>

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Texto3      "
        android:layout_toEndOf="@id/text2"/>

    <TextView
        android:id="@+id/text3.1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Texto3.1  "
        android:layout_toEndOf="@id/text2"
        android:layout_below="@id/text3"/>

    <TextView
        android:id="@+id/text3.2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Texto3.2  "
        android:layout_toEndOf="@id/text2"
        android:layout_below="@id/text3.1"/>

    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Texto4  "
        android:layout_toEndOf="@id/text3"/>

    <TextView
        android:id="@+id/text4.1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Texto4.1  "
        android:layout_toEndOf="@id/text3.1"
        android:layout_below="@id/text4"/>

    <TextView
        android:id="@+id/text4.2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Texto4.2  "
        android:layout_toEndOf="@id/text4.1"
        android:layout_below="@id/text4"/>

    <TextView
        android:id="@+id/text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Texto5  "
        android:layout_toEndOf="@id/text4.2"/>


</RelativeLayout>